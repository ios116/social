[mysqld]
character-set-server = utf8
collation-server = utf8_unicode_ci
skip-character-set-client-handshake
bind-address           = 0.0.0.0

#включает GTID
gtid_mode=ON
log_bin=mysql-bin
log-slave-updates
enforce-gtid-consistency
# ID сервера
server_id=1
# название базы данных, которая будет реплицироваться
binlog_do_db = soc_db
